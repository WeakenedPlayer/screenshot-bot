{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./type",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "dom", "es6" ],
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [ "src/**/*", "test/**/*" ],
  "exclude": [ "node_modules", "dist" ]
}
